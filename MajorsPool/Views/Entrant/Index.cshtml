@model IEnumerable<MajorsPool.Models.Entrant>

@{
    ViewBag.Title = "Index";
}

<h2>Entrant</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EntrantId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        @if (Convert.ToBoolean(Session["Admin"]))
        {
        <th>
            @Html.DisplayNameFor(model => model.SecurityCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        }
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EntrantId)
        </td>
        <td style="text-align: center">
            @if (item.PaidStatus)
            {
                <span style="text-align: center">Y</span>
            }
            else
            { 
                <span style="text-align: center">N</span>
            }                
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        @if (Convert.ToBoolean(Session["Admin"]))
        {
        <td>
            @Html.DisplayFor(modelItem => item.SecurityCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EntrantId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EntrantId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EntrantId })
        </td>
    </tr>
}

</table>
