@model IEnumerable<MajorsPool.Models.Golfer>

@{
    ViewBag.Title = "Golfer List";
}

<h2>Golfers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GolferId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GolferId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GolferId }) |
            @Html.ActionLink("Details", "Details", new { id=item.GolferId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GolferId })
        </td>
    </tr>
}

</table>

<form action="Golfer/Index" method="post" enctype="multipart/form-data">
  
