<!doctype html>
 
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>@ViewBag.Title - Majors Pool</title>
    @*<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.0/themes/base/jquery-ui.css" />*@
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")

        @Scripts.Render("~/bundles/jqueryTimer")
        
        @Scripts.Render("~/bundles/modernizr")
  <link rel="stylesheet" href="/resources/demos/style.css" />
  <style>
    label, input { display:block; }
    input.text { margin-bottom:12px; width:95%; padding: .4em; }
    fieldset { padding:0; border:0; margin-top:25px; }
    h1 { font-size: 1.2em; margin: .6em 0; }
    div#users-contain { width: 350px; margin: 20px 0; }
    div#users-contain table { margin: 1em 0; border-collapse: collapse; width: 100%; }
    div#users-contain table td, div#users-contain table th { border: 1px solid #eee; padding: .6em 10px; text-align: left; }
    .ui-dialog .ui-state-error { padding: .3em; }
    .validateTips { border: 1px solid transparent; padding: 0.3em; }
  </style>
    </head>
    <body>
        <header>

            <div class="content-wrapper" style="padding-left: 14px">
                
                <table class="float-left" style="border-width: 1px; border-style: none; width: 100%" border="1">
                    <tr>
                        <td class="tdLogo" style="border-width: 1px; border-style: none; text-align: center">
                            <img id="logo" class="logo" src="~/Images/blue.png" />
                            @*<div id="logo" style="background-color: transparent">&nbsp;&nbsp;&nbsp;</div>*@
                        </td>
                        <td class="tdTitle" style="border-width: 1px; border-style: none;">
                            <span class="site-title" style="vertical-align: middle">@Html.ActionLink("PGA Championship", "Index", "Pick")</span>
                        </td>
                        <td class="tdMenu" >
                            <nav>
                                <ul id="menu">
                                    @if (Convert.ToBoolean(Session["Admin"]))
                                    {
                                        <li>@Html.ActionLink("Home", "Index", "Pick")</li>
                                        <li>@Html.ActionLink("Golfer", "Index", "Golfer")</li>
                                        <li>@Html.ActionLink("Entrant", "Index", "Entrant")</li>
                                        <li>@Html.ActionLink("TopPickList", "Index", "TopPickList")</li>
                                    }
                                    <li><a href="~/Documents/Majors Pool.pdf">Rules</a>
                                </ul>
                            </nav>
                        </td>
                    </tr>
                </table>
                
            </div>

        </header>

        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        
        

        @Scripts.Render("~/bundles/secretAdmin")        
        
        @RenderSection("scripts", required: false)

        </body>
    </html>